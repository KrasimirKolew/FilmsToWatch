@model FilmsToWatch.Models.FilmModels.FilmFormModel
@{
}

<form class="w-40" asp-action="Edit" method="post" enctype="multipart/form-data">
    <h2 class="pb-10">Update Films</h2>
        <input type="hidden" class="input" asp-for="Id">
    <input type="hidden" class="input" asp-for="MovieImage">

    <div class="input-container">
        <label asp-for="Title" class="w-40">Title</label>
        <input type="text" class="input" asp-for="Title">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Title"> </span>
    </div>

    <div class="input-container">
        <label asp-for="Director" class="w-40">Image</label>
        <input type="file" asp-for="ImageFile">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="ImageFile"> </span>
    </div>

    <div class="form-group">
        <label asp-for="GenreId"></label>
        <select asp-for="GenreId" class="form-control">
            @foreach (var category in Model.Genres)
            {
                <option value="@category.Id">@category.Name</option>
            }
        </select>
        <span asp-validation-for="GenreId" class="small text-danger"></span>
    </div>

    <div class="input-container">
        <label asp-for="@Model.ActorId" class="form-label-add-edit">Actor</label>
        <select asp-for="@Model.ActorId" class="form-control" aria-required="true">
            @foreach (var type in Model.Actors)
            {
                <option value="@type.Id">@type.ActorName</option>
            }
        </select>
        <span asp-validation-for="@Model.GenreId" class="text-danger"></span>
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Actors"> </span>
    </div>

    <div class="input-container">
        <label asp-for="ReleaseYear" class="w-40">Released Year</label>
        <input type="text" class="input" asp-for="ReleaseYear">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="ReleaseYear"> </span>
    </div>

    <div class="input-container">
        <label asp-for="Director" class="w-40">Director</label>
        <input type="text" class="input" asp-for="Director">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Director"> </span>
    </div>

    @if (TempData["msg"] != null)
    {
        <div class="alert mb-1">
            @TempData["msg"]
        </div>
    }

    <div class="input-container">
        <div class="text-center">
            <input class="btn btn-default" type="submit" value="Save" />
        </div>
        <a class="btn btn-sec" href="/Film/All">All records</a>
    </div>
</form>
