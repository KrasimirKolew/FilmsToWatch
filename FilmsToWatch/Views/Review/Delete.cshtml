@model FilmsToWatch.Models.ReviewModels.ReviewDeleteViewModel

@{
    ViewBag.Title = "Delete Comment";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h3 class="card-title text-center">@Model.Content</h3>
                <p class="mb-0"><strong>User:</strong> @Model.UserName</p>
                <p class="text-danger mt-3">"Are you sure you want to delete this event?"</p>
            </div>
            <div class="card-footer">
                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" name="filmId" value="@Model.FilmId" />
                    <button type="submit" class="btn btn-danger">Confirm Delete</button>
                    <a asp-action="All" asp-route-Id="@Model.FilmId" class="btn btn-secondary">Cancel</a>
                </form>

            </div>
        </div>
    </div>
</div>